<?xml version="1.0" encoding="UTF-8"?>
<form>
   <title>Section Defaults</title>
   <description>Section Defaults provides inherited values to all children and sibling content items. To learn more about content inheritance see docs.craftercms.org topic "Content Inheritance"</description>
   <objectType>component</objectType>
   <content-type>/component/level-descriptor</content-type>
   <properties>
      <property>
         <name>display-template</name>
         <label>Display Template</label>
         <value/>
         <type>template</type>
      </property>
      <property>
         <name>merge-strategy</name>
         <label>Merge Strategy</label>
         <value>inherit-levels</value>
         <type>string</type>
      </property>
      <property>
         <name>no-template-required</name>
         <label>No Template Required</label>
         <type>boolean</type>
         <value/>
      </property>
   </properties>
   <sections>
      <section>
         <title>Section Defaults Properties</title>
         <description/>
         <defaultOpen>true</defaultOpen>
         <fields>
            <field>
               <type>file-name</type>
               <id>file-name</id>
               <iceId/>
               <title>File Name</title>
               <description/>
               <defaultValue>crafter-level-descriptor.level</defaultValue>
               <help/>
               <properties>
                  <property>
                     <name>size</name>
                     <value>100</value>
                     <type>int</type>
                  </property>
                  <property>
                     <name>maxlength</name>
                     <value>50</value>
                     <type>int</type>
                  </property>
                  <property>
                     <name>readonly</name>
                     <value>true</value>
                     <type>boolean</type>
                  </property>
               </properties>
               <constraints/>
            </field>
            <field>
               <type>image-picker</type>
               <id>siteLogo</id>
               <iceId/>
               <title>Site Logo</title>
               <description/>
               <defaultValue/>
               <help/>
               <properties>
                  <property>
                     <name>width</name>
                     <value>{ "exact":"", "min":"", "max":"" }</value>
                     <type>range</type>
                  </property>
                  <property>
                     <name>height</name>
                     <value>{ "exact":"", "min":"", "max":"" }</value>
                     <type>range</type>
                  </property>
                  <property>
                     <name>thumbnailWidth</name>
                     <value/>
                     <type>int</type>
                  </property>
                  <property>
                     <name>thumbnailHeight</name>
                     <value/>
                     <type>int</type>
                  </property>
                  <property>
                     <name>imageManager</name>
                     <value>uploadNewImage,useExistingImage</value>
                     <type>datasource:image</type>
                  </property>
                  <property>
                     <name>readonly</name>
                     <value/>
                     <type>boolean</type>
                  </property>
               </properties>
               <constraints>
                  <constraint>
                     <name>required</name>
                     <value/>
                     <type>boolean</type>
                  </constraint>
               </constraints>
            </field>
            <field>
               <type>repeat</type>
               <id>contactEmails</id>
               <iceId/>
               <title>Contact Emails</title>
               <description/>
               <minOccurs>0</minOccurs>
               <maxOccurs>*</maxOccurs>
               <properties>
                  <property>
                     <name>minOccurs</name>
                     <value>0</value>
                     <type>string</type>
                  </property>
                  <property>
                     <name>maxOccurs</name>
                     <value>*</value>
                     <type>string</type>
                  </property>
               </properties>
               <fields>
                  <field>
                     <type>input</type>
                     <id>email</id>
                     <iceId/>
                     <title>Email</title>
                     <description/>
                     <defaultValue/>
                     <help/>
                     <properties>
                        <property>
                           <name>size</name>
                           <value>50</value>
                           <type>int</type>
                        </property>
                        <property>
                           <name>maxlength</name>
                           <value>100</value>
                           <type>int</type>
                        </property>
                        <property>
                           <name>readonly</name>
                           <value/>
                           <type>boolean</type>
                        </property>
                        <property>
                           <name>tokenize</name>
                           <value>false</value>
                           <type>boolean</type>
                        </property>
                     </properties>
                     <constraints>
                        <constraint>
                           <name>required</name>
                           <value>false</value>
                           <type>boolean</type>
                        </constraint>
                        <constraint>
                           <name>pattern</name>
                           <value>.+@.+\..+</value>
                           <type>string</type>
                        </constraint>
                     </constraints>
                  </field>
               </fields>
            </field>
         </fields>
      </section>
   </sections>
   <datasources>
      <datasource>
         <type>img-desktop-upload</type>
         <id>uploadNewImage</id>
         <title>Upload New Image</title>
         <interface>image</interface>
         <properties>
            <property>
               <name>repoPath</name>
               <value>/static-assets/images</value>
               <type>undefined</type>
            </property>
         </properties>
      </datasource>
      <datasource>
         <type>img-repository-upload</type>
         <id>useExistingImage</id>
         <title>Browse Existing Image</title>
         <interface>image</interface>
         <properties>
            <property>
               <name>repoPath</name>
               <value>/static-assets/images</value>
               <type>undefined</type>
            </property>
         </properties>
      </datasource>
   </datasources>
</form>
